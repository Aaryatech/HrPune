<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutTracking"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_date_blue"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/myriad_pro_semibold"
                    android:text="21/05/2019" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_margin="3dp"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/myriad_pro_semibold"
                    android:text="Pending" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvEmpName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:layout_margin="3dp"
                android:fontFamily="@font/myriad_pro_semibold"
                android:text="Pending" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWrHrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:drawablePadding="10dp"
                    android:layout_margin="3dp"
                    android:drawableLeft="@drawable/ic_over_time"
                    android:layout_weight="1"
                    android:fontFamily="@font/myriad_pro_semibold"
                    android:text="Working Hrs " />

                <TextView
                    android:id="@+id/tvShift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_shift"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/myriad_pro_semibold"
                    android:text="Shift" />

            </LinearLayout>

            <EditText
                android:id="@+id/edOTHrs"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1.3"
                android:text="11.33"
                android:layout_gravity="end"
                android:background="@android:drawable/editbox_background_normal"
                android:fontFamily="@font/myriad_pro_semibold"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>