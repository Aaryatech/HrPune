<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLeaveType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_leave_blue"
                android:drawablePadding="10dp"
                android:fontFamily="@font/myriad_pro_regular"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tvDayType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/myriad_pro_regular" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_date_blue"
                android:drawablePadding="10dp"
                android:fontFamily="@font/myriad_pro_regular"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tvDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/myriad_pro_regular"
                android:gravity="end"
                android:textAlignment="textEnd" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_thumb"
                android:drawablePadding="4dp"
                android:layout_weight="1"
                android:gravity="start"
                android:fontFamily="@font/myriad_pro_semibold"
                android:layout_gravity="start"
                android:textStyle="bold"
                android:textColor="@color/redColor"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:fontFamily="@font/myriad_pro_semibold"
                android:gravity="end"
                android:padding="10dp"
                android:layout_weight="1"
                android:text="Cancel Leave"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:visibility="gone" />





            <!--            <TextView-->
<!--                android:id="@+id/tvStatus"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:drawableLeft="@drawable/ic_thumb"-->
<!--                android:drawablePadding="10dp"-->
<!--                android:fontFamily="@font/myriad_pro_semibold"-->
<!--                android:layout_gravity="center"-->
<!--                android:textStyle="bold"-->
<!--                android:textColor="@color/redColor"-->
<!--                android:textSize="15sp" />-->

<!--            android:layout_weight="1"-->
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>